<!DOCTYPE html>
<html{% if site.lang %} lang="{{ site.lang }}"{% endif %} prefix="
    {% if site.addthis_profile_id %}addthis: http://www.addthis.com/help/api-spec{% endif %}
    og: http://ogp.me/ns#
    fb: http://ogp.me/ns/fb#
    article: http://ogp.me/ns/article#">

{% include head.html %}

<body itemscope itemtype="http://schema.org/{% if page.is_post %}{{ "BlogPosting" }}{% else %}{{ "WebPage" }}{% endif %}">
    <div class="bmd-layout-container bmd-drawer-f-l bmd-drawer-overlay">
        {% include header.html %}
        {% include drawer.html %}

        <main class="bmd-layout-content">
            <div class="container" id="main-container">
                <div class="row">
                    <div class='col-sm-8'>
                        {{ content }}
                    </div>
                    <div class="col-sm-4">
                        {% include sidebar.html %}
                    </div>
                </div>
            </div>

            {% include footer.html %}

            {% if jekyll.environment != "production" %}
                <div id="fab">
                    <button type="button" class="btn btn-primary bmd-btn-fab">
                        <i class="material-icons">visibility</i>
                    </button>
                </div>
            {% endif %}
        </main>
    </div><!-- .bmd-layout-container -->
</body>
</html>
